# === Server / portar ===
SERVER_HOST=127.0.0.1       # IP/hostname till maskinen där Docker kör
WEB_PORT=3001               # publik port för webben
API_PORT=8080               # publik port för API:t

# === MariaDB på NAS ===
NAS_DB_HOST=192.168.1.50    # NAS ip/host
NAS_DB_PORT=3306            # MariaDB-port på NAS
NAS_DB_NAME=korjournal      # databasnamn
NAS_DB_USER=koruser         # databasuser
NAS_DB_PASS=changeme        # databaslösen (byt på din server!)

# === Home Assistant (obligatoriskt) ===
HA_BASE_URL=http://homeassistant.local:8123
HA_TOKEN=din_long_lived_token
HA_ODOMETER_ENTITY=sensor.kia_uvo_odometer
HA_FORCE_DOMAIN=kia_uvo
HA_FORCE_SERVICE=force_update
HA_FORCE_DATA={"entity_id":"sensor.kia_uvo_odometer"}

# === User login & Security ===
# REQUIRED: Change this to a long random string (use: openssl rand -hex 32)
SECRET_KEY=byt-denna-till-nagot-langt-och-slumpat

# Environment: 'development' or 'production' (SECRET_KEY required in production)
ENV=development

# Token expiration in minutes (default: 1440 = 24 hours, old default was 43200 = 30 days)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# REQUIRED: Admin credentials (password must be at least 8 characters)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=<välj starkt lösen, minst 8 tecken>

# Cookie settings for session management
COOKIE_SECURE=false                 # Set to 'true' in production with HTTPS
COOKIE_SAMESITE=lax                 # 'lax', 'strict', or 'none' (requires HTTPS if 'none')

# SSL verification for Home Assistant API calls (set to 'false' for self-signed certs)
HA_VERIFY_SSL=true

